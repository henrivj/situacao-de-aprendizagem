            resArrOrdenado1.innerText = 'Primeiro crie um array.'
            return
        }

        let arrOrdenado = arrOrdenado.sort((a, b) => a - b)

        if (!switchCrescente1.checked) {
            arrOrdenado1.reverse()
        }

        resArrOrdenado1.innerText = arrOrdenado.join(', ')
    })</code></pre>
